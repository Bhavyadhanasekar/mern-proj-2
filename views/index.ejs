<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Blog Posts</title>
  <link rel="stylesheet" type="text/css" href="/styles.css">
</head>
<body>
  <div class="container">
    <h1>All Posts</h1>
    <% posts.forEach(function(post) { %>
      <div class="post">
        <h2><%= post.title %></h2>
        <p><%= post.body %></p>
        <a class="btn" href="/posts/<%= post._id %>">Read More</a>
      </div>
    <% }) %>
  </div>
</body>
</html>
